<h1>Create New Item</h1>

<div>
  <% if @category.errors.any? %>
    <h2>Could not create due to errors.</h2>
    <ul>
      <% @category.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with scope: :category, url: categories_path, local: true do |f| %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', home_path %>